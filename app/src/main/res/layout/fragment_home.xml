<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.MapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/cvTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nunito_req"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10.2sp"
                android:textColor="#cc000000"
                android:lineSpacingExtra="9.2sp"
                android:gravity="center_horizontal"
                android:text="29 jun 2019"
                />
            <TextView
                android:layout_below="@id/date"
                    android:id="@+id/addressFrom"
                android:fontFamily="@font/nunito_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.5sp"
                android:textColor="#cc000000"
                android:lineSpacingExtra="4.8sp"
                android:gravity="center_horizontal"
                android:text="Home , St9"
                />
            <ImageView
                android:layout_below="@id/addressFrom"
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/points"/>
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@id/points"
                android:id="@+id/toAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14.5sp"
                android:textColor="#cc000000"
                android:lineSpacingExtra="4.8sp"
                android:gravity="center_horizontal"
                android:text="School name , new city"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
    android:visibility="visible"
        android:id="@+id/cvBottom"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="173dp">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/nunito_bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.3sp"
            android:textColor="#59474b"
            android:lineSpacingExtra="-1sp"
            android:gravity="center_horizontal"
            android:text="Where to go?"
            />

        <AutoCompleteTextView
            android:id="@+id/destion"
            android:hint="Select your destination"
            android:fontFamily="@font/nunito_req"
            android:drawableRight="@drawable/ic_right_arrow"
            android:drawablePadding="7dp"
            android:padding="7dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_gray"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
    android:visibility="gone"
        android:id="@+id/cvBottomDriver"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView

            android:layout_marginTop="7dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14.3sp"
            android:textColor="@color/colorPrimary"
            android:lineSpacingExtra="-1sp"
            android:gravity="center_horizontal"
            android:text="Trip Start"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/avatar"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"/>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/nunito_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:textColor="#cc000000"
            android:lineSpacingExtra="7.8sp"
            android:text="Adam is on the way to your location"
            />
        <LinearLayout
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@color/yallow"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/oval_yallow"
                >
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_ic"
                    android:layout_gravity="center"/>
            </RelativeLayout>
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="@color/yallow"/>
            <RelativeLayout
                android:background="@drawable/oval_grey"
               android:id="@+id/bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bus_ic" />
            </RelativeLayout>
            <View
                android:id="@+id/viewBus"
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#d7d7d7"/>
            <RelativeLayout
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_grey">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bus_ic1"/>
            </RelativeLayout>
            <View
            android:id="@+id/ViewSchool"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="#d7d7d7"/>
            </LinearLayout>
        <LinearLayout
            android:padding="7dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/nunito_bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="#ee302d"
                android:lineSpacingExtra="5.3sp"
                android:text="Something wrong contact school !"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ee302d"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/linBottom"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<androidx.recyclerview.widget.RecyclerView
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rv"/>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn"
        android:layout_below="@+id/rv"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Choose Driver"
        android:textSize="16.2sp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>